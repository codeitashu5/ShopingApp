<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="text_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/holo_red_dark</item>
        <item name="android:textSize">24sp</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:fontFamily">@font/acme</item>
    </style>

    <style name="button_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">right</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:backgroundTint">@android:color/holo_green_light</item>
        <item name="android:clickable">true</item>
        <item name="android:contentDescription">button to add the product</item>
    </style>

    <style name="floating_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:clickable">true</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:layout_gravity">end</item>
        <item name="android:backgroundTint">@android:color/holo_green_light</item>
        <item name="android:focusable">true</item>
    </style>
</resources>